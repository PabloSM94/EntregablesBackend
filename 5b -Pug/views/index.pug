html 
    head 
        title="API de Productos"
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet", href="./css/style.css")

    body(class="text-light bg-dark")
        h1="API de Productos"
        h2="Ingrese nuevo producto"
        div(class="principal")
            form(action="/api/productos" method="POST"  class="row gx-4 gy-4")
                each producto in productos 
                    div(class="entradas col-md-4")
                        input(class="form-control"
                            type=(producto.type) 
                            name=(producto.name) 
                            placeholder=(producto.nombreCampo)
                            )
                div(class="col-12 justify-items-center")
                    button(class="btn btn-primary")="Cargar"
        div(class="proxima")
            div(class="botonNext")
                button(
                    type="button"
                    class="btn btn-outline-success"
                )
                    a(id="next" href="/productos")="Ver productos"

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous")
